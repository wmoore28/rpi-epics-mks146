#
# MKS 146
#

record(asyn, "$(P)$(R)asyn") {
    field(PORT, "$(PORT)")
    field(OEOS, "\n")
    field(IEOS, "\n")
}

record(stringin, "$(P)$(R)VERSION") {
    field(DTYP, "stream")
    field(INP,  "@mks146.proto getVersion $(PORT)")
    field(PINI, "YES")  # process at startup
}

# You can write functions for each process variable (PV) or pass args. See 
# protocol file for details.
record(ai, "$(P)$(R)CH4:FLOW") {
    field(DTYP, "stream")
#   field(INP, "@mks146.proto getFlow $(PORT)")
    field(INP, "@mks146.proto getAi(\@6014) $(PORT)")
    field(SCAN, "5 second")
}

